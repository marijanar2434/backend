<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <embeddable name="App\Common\Domain\ValueObject\File">
        <field name="file" type="text" column="file" nullable="true"/>
        <field name="name" type="string" column="name" length="255" nullable="true"/>
        <field name="mimeType" type="string" column="mime_type" length="255" nullable="true"/>
        <field name="extension" type="string" column="extension" length="255" nullable="true"/>
        <field name="size" type="integer" column="size" nullable="true"/>
    </embeddable>
</doctrine-mapping>